{
  "$id": "https://myon.dev/schemas/canvas/card_types/routine_summary.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "required": ["name", "workouts"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Routine name (e.g., 'Push Pull Legs', 'Upper Lower')"
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "frequency": {
      "type": "integer",
      "minimum": 1,
      "maximum": 14,
      "description": "Workouts per week"
    },
    "workouts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "description": "Ordered list of workout days referencing session_plan cards",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["day", "title"],
        "properties": {
          "day": {
            "type": "integer",
            "minimum": 1,
            "description": "Day number in the routine (1-indexed)"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Workout day title (e.g., 'Push', 'Pull', 'Legs')"
          },
          "card_id": {
            "type": ["string", "null"],
            "description": "Reference to the session_plan card for this day. Null if not yet generated."
          },
          "estimated_duration": {
            "type": ["integer", "null"],
            "minimum": 1,
            "description": "Estimated duration in minutes"
          },
          "exercise_count": {
            "type": ["integer", "null"],
            "minimum": 0,
            "description": "Number of exercises in this workout"
          },
          "generate": {
            "type": "boolean",
            "description": "If true, this day needs to be generated (placeholder)"
          }
        }
      }
    }
  }
}
