{
  "$id": "https://myon.dev/schemas/canvas/card_types/agent_message.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "text": { "type": "string" },
    "status": { 
      "type": "string", 
      "enum": ["thinking", "working", "complete", "waiting"] 
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string" },
          "args": { "type": "object" }
        }
      }
    }
  },
  "required": ["text"]
}
