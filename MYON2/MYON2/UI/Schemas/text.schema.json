{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "text.schema.json",
  "title": "Text Card",
  "type": "object",
  "required": ["id", "type", "text"],
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "text" },
    "text": { "type": "string" },
    "title": { "type": "string" },
    "subtitle": { "type": "string" },
    "layout": { "type": "object", "properties": { "width": { "enum": ["oneThird", "oneHalf", "full"] } } }
  },
  "additionalProperties": false
}


