{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "list-card.schema.json",
  "title": "ListCardWithExpandableOptions",
  "type": "object",
  "required": ["id", "type", "title", "options"],
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "list" },
    "title": { "type": "string" },
    "subtitle": { "type": "string" },
    "layout": {
      "type": "object",
      "properties": {
        "width": { "enum": ["oneThird", "oneHalf", "full"], "default": "full" },
        "columns": { "type": "integer", "minimum": 1, "maximum": 2 }
      },
      "additionalProperties": false
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "iconSystemName": { "type": "string" },
          "action": {
            "type": "object",
            "required": ["kind"],
            "properties": {
              "kind": { "type": "string" },
              "payload": { "type": "object" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "meta": { "$ref": "card-base.schema.json#/properties/meta" },
    "actions": { "$ref": "card-base.schema.json#/properties/actions" },
    "menuItems": { "$ref": "card-base.schema.json#/properties/menuItems" }
  },
  "additionalProperties": false
}


